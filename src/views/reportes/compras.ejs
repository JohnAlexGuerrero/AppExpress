<%- include("../header"); %>

<p id="demo"></p>

<script>
    var d = new Date();
    document.getElementById("demo").innerHTML = d;
</script>

<div class="container my-3 shadow-lg p-3 mb-5 bg-white rounded">
    <div class="row">
        <div class="col-sm-12">
            <h2>Compras y Pagos</h2>
            <div class="row">
                <div class="col-sm-7">Registrar Pago y compra <a href="#" data-toggle="modal"
                        data-target="#exampleModal" data-whatever="@mdo"><i class="fas fa-plus-circle"></a></i></div>
                <div class="col-sm-5">
                    <input id="myInput" class="form-control mr-sm-2" type="search" placeholder="Search Product">
                </div>
            </div>


            <div class="container my-3">
                <table id="dtMaterialDesignExample" class="table table-hover dataTable table-bordered table-sm" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="th-sm">Fecha
                            </th>
                            <th class="th-sm">Factura
                            </th>
                            <th class="th-sm">Descripción
                            </th>
                            <th class="th-sm">Valor
                            </th>
                           <!-- <th class="th-sm">Actions-->
                            </th>
                        </tr>
                    </thead>

                    <tbody id="myTable">

                        <% compras.forEach(compras => { %>
                        <tr>
                            <td><%= compras.fecha %></td>
                            <td><%= compras.factura %></td>
                            <td><%= compras.description %></td>
                            <td>$<%= compras.valor %></td>
                        <!--    <td><a href="/productos/cart/" class="list-group-item-action "><i
                                        class="fas fa-cart-plus"></i></a>
                                | <a href="/productos/editar/" class="list-group-item-action"><i
                                        class="fas fa-plus"></i></a>

                            </td>-->
                        </tr>

                        <% })%>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="n">Nuevo registro</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/reportes/compras/ingresar" method="POST">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Fecha:</label>
                        <input type="date" class="form-control" id="fecha" name="fecha" autocomplete="off" required>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Factura de Compra ó Proveedor:</label>
                        <input type="text" class="form-control" id="factura" name="factura">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Descripción:</label>
                        <textarea type="text" class="form-control" id="descripcion" name="descripcion"cols="30" rows="4"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Valor:</label>
                        <input type="number" class="form-control" id="valor" name="valor">
                    </div>
                    <div class="modal-footer">
                        <button type="close" class="btn btn-secundary btn-sm">close</button>
                        <button class="btn btn-primary btn-sm">save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<%- include("../footer"); %>