<%- include("../header"); %>

<p id="demo"></p>

<script>
    var d = new Date();
    document.getElementById("demo").innerHTML = d;
</script>
<div class="container my-3">
    <div class="row">
        <div class="col-sm-8">
            <h2>Productos</h2>
        </div>
        <div class="col-sm-4">
            <input id="myInput" class="form-control mr-sm-2" type="text" placeholder="Search Product">
        </div>
    </div>
</div>
<div class="container my-3">
    
    <% productos.forEach(producto => { %>
    <ul class="list-group" id="myList">
        <li class="list-group-item  col-sm-12 list-group-item-action d-flex justify-content-between align-items-center">
            <a href="/productos/editar/<%= producto.idproductos %>" class="list-group-item-action">
                <div class="row">
                    <div class="col-sm-6">
                        <%= producto.nombre %>
                    </div>
                    <div class="col-sm-3">
                        Precio Venta $ 13.000
                    </div>
                </div>
            </a>
            <span class="badge badge-primary badge-pill">0   Und</span>
        </li>
    </ul>
    <% })%>

</div>

<%- include("../footer"); %>