<%- include("../header"); %>

<div class="container col-sm-8  my-3">
    <h2>Agregar producto</h2>
    <form method="post" action="/productos/insertar">
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input required id="nombre" placeholder="Nombre del producto" class="form-control" type="text" name="nombre"
                autocomplete="off">
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label for="codigo">Código</label>
                    <input required id="codigo" placeholder="Código producto" class="form-control" type="text"
                        name="codigo" autocomplete="off">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group ">
                    <label for="inputState">Unidad</label>
                    <select id="inputState" class="form-control" id="und" name="und">
                        <option selected>Choose...</option>
                        <option value="1">Unidad</option>
                        <option value="2">Kilo</option>
                        <option value="3">Bulto</option>
                        <option value="4">Galon</option>
                        <option value="5">Caneca</option>
                        <option value="6">Metro</option>
                        <option value="7">Rollo</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label for="stock">Cantidad inicial</label>
                    <input required id="stock" placeholder="Cantidad de producto" class="form-control" type="number"
                        name="stock">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label for="precio">Precio costo</label>
                    <input required id="precio" placeholder="Precio del producto" class="form-control" type="number"
                        name="precio">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label for="pventa">Precio de Venta</label>
                    <input required id="pventa" placeholder="Precio del producto" class="form-control" type="number"
                        name="pventa">
                </div>
            </div>
        </div>
        <div class="form-group">
            <textarea name="description" id="description" cols="20" rows="6" class="form-control"
                placeholder="Descripcion de producto"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/productos" class="btn btn-primary">Volver</a>
        </div>
    </form>
</div>
<%- include("../footer"); %>